@model DemoBlogAppProject.Models.EditModel.editTag

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - [Admin]</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <lable class="form-lable">Id</lable>
            <input type="text" class="form-control" id="name" asp-for="Id" readonly/>
        </div>

        <div class="mb-3">
            <lable class="form-lable">Name</lable>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Display Name</lable>
            <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Update</button>
                <button type="submit" class="btn btn-danger ms-2"
                        asp-area="" asp-controller="Tag" asp-action="Delete">
                    Delete</button>
            </div>
            
        </div>

    </form>
</div>

