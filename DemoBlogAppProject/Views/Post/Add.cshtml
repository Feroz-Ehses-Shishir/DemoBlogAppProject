@model DemoBlogAppProject.Models.ViewModel.AddPost

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Post - [Admin]</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <lable class="form-lable">Heading</lable>
            <input type="text" class="form-control" id="name" asp-for="Heading" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Page Title</lable>
            <input type="text" class="form-control" id="PageTitle" asp-for="PageTitle" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Content</lable>
            <textarea type="text" class="form-control" id="Content" asp-for="Content"></textarea>
        </div>

        <div class="mb-3">
            <lable class="form-lable">Short Description</lable>
            <input type="text" class="form-control" id="ShortDescription" asp-for="ShortDescription" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">FeaturedImageUrl</lable>
            <input type="text" class="form-control" id="FeaturedImageUrl" asp-for="FeaturedImageUrl" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Url Handle</lable>
            <input type="text" class="form-control" id="UrlHandle" asp-for="UrlHandle" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Published Date</lable>
            <input type="date" class="form-control" id="PublishedDate" asp-for="PublishedDate" />
        </div>

        <div class="mb-3">
            <lable class="form-lable">Author</lable>
            <input type="text" class="form-control" id="Author" asp-for="Author" />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="Visible" asp-for="Visible" />
            <lable class="form-check-label">Is Visible?</lable>
        </div>

        <div class="mb-3">
            <lable class="form-lable">Tags</lable>
            <select class="form-select" asp-items="@Model.Tags" asp-for="TagId"></select>
        </div>


        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Save</button>
        </div>

    </form>
</div>
